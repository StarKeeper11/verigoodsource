{
  "name": "TrueScan Verifier",
  "description": "A Chrome extension to calculate a credibility score for websites and verify text content.",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "TrueScan Team",
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon16.png",
          "32": "icon32.png",
          "48": "icon48.png",
          "128": "icon128.png"
      },
      "default_title": "TrueScan - Verify Content"
  },
  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
  },
  "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "contextMenus",
      "notifications"
  ],
  "host_permissions": [
      "https://*/*",
      "http://*/*"
  ],
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_idle"
      }
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "popup.html",
              "index.html",
              "styles.css",
              "scripts/*",
              "icon16.png",
              "icon32.png",
              "icon48.png",
              "icon128.png"
          ],
          "matches": ["<all_urls>"]
      }
  ],
  "options_page": "options.html",
  "minimum_chrome_version": "88",
  "homepage_url": "https://truescan.example.com",
  "short_name": "TrueScan"
}